{
  "name": "substrate-staking-rewards-client",
  "version": "0.0.1",
  "description": "A tool to display and export staking rewards on Polkadot and other substrate chains",
  "productName": "PolkaTax",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue .",
    "lint-fix": "eslint --ext .js,.ts,.vue . --fix",
    "format": "prettier --write . --ignore-path ../.gitignore",
    "dev": "quasar dev",
    "build": "quasar build",
    "test-watch": "jest --watch --verbose false",
    "test": "jest",
    "integration-tests:playwright": "wait-on http://127.0.0.1:9000/index.html && npx playwright test --output \"\"",
    "integration-tests": "run-p -r dev integration-tests:playwright"
  },
  "dependencies": {
    "@json2csv/plainjs": "^7.0.1",
    "@quasar/extras": "^1.0.0",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "pinia": "^2.1.6",
    "quasar": "^2.6.0",
    "ts-node": "^10.9.2",
    "vue": "^3.0.0",
    "vue-google-charts": "^1.1.0",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@playwright/test": "^1.52.0",
    "@quasar/app-vite": "^1.0.0",
    "@types/file-saver": "^2.0.5",
    "@types/node": "^12.20.21",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^9.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^29.3.2",
    "typescript": "^4.5.4",
    "wait-on": "^8.0.3"
  }
}
